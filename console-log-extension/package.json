{
  "name": "console-log-extension",
  "version": "1.0.0",
  "description": "Chrome extension for console log management",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=\"tests/(?!integration|performance|compatibility)\"",
    "test:integration": "jest --testPathPattern=\"tests/integration\"",
    "test:performance": "jest --testPathPattern=\"tests/performance\" --runInBand",
    "test:security": "jest --testPathPattern=\"tests/security\"",
    "test:compatibility": "jest --testPathPattern=\"tests/compatibility\"",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:verbose": "jest --verbose",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "build": "node scripts/build.js",
    "package": "node scripts/package.js",
    "validate": "node scripts/validate-webstore.js",
    "prepare-release": "npm run validate && npm run build && npm run package"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "archiver": "^7.0.1",
    "babel-jest": "^29.0.0",
    "fake-indexeddb": "^6.2.2",
    "jest": "^29.0.0",
    "jest-html-reporters": "^3.1.0",
    "jest-junit": "^16.0.0",
    "jsdom": "^26.1.0",
    "sharp": "^0.34.3"
  }
}
